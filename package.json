{
  "name": "markdown-editor",
  "version": "2.0.1",
  "description": "A Markdown Editor PWA",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:nico-martin/markdown-editor.git"
  },
  "scripts": {
    "dev": "npm run serve:dev & npm run build:dev",
    "prod": "npm run build:prod",
    "build:dev": "webpack -d --watch",
    "build:prod": "webpack --mode production",
    "serve:dev": "webpack-dev-server --open"
  },
  "dependencies": {
    "@datapunt/matomo-tracker-react": "^0.5.1",
    "@tinymce/tinymce-react": "^4.3.0",
    "idb": "^7.1.1",
    "preact": "^10.17.1",
    "react-scroll-sync": "^0.11.0",
    "showdown": "^2.1.0",
    "turndown": "^7.1.2",
    "unistore": "^3.5.2",
    "unistore-hooks": "^0.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.15",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-react-jsx": "^7.22.15",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-react": "^7.22.15",
    "@babel/register": "^7.22.15",
    "@babel/runtime": "^7.22.15",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "autoprefixer": "^10.4.15",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-webpack": "^0.13.7",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "favicons-webpack-plugin": "^6.0.1",
    "fs": "0.0.1-security",
    "glob-all": "^3.3.1",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "path": "^0.12.7",
    "postcss-loader": "^7.3.3",
    "postcss-mixins": "^9.0.4",
    "postcss-nested": "^6.0.1",
    "prettier": "^3.0.3",
    "prettier-stylelint": "^0.4.2",
    "pretty-quick": "^3.1.3",
    "purgecss-webpack-plugin": "^5.0.0",
    "raw-loader": "^4.0.2",
    "style-loader": "^3.3.3",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-prettier": "^4.0.2",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-pwa-manifest": "^4.3.0",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "author": "Nico Martin - https://nico.dev",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/nico-martin/markdown-editor/issues"
  },
  "homepage": "https://gitlab.com/nico-martin/markdown-editor#README",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "h",
          "pragmaFrag": "Fragment"
        }
      ],
      "@babel/plugin-transform-runtime"
    ]
  },
  "browserslist": [
    "> 1%",
    "IE 11"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  }
}
